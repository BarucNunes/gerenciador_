
    # Ganhos fixos
ganhos_fixos = [0] * 30
    # Ganhos mutáveis
ganhos_mutaveis = [0] * 30
    # Despesas fixas
despesas_fixas = [0] * 30
    # Despesas mutáveis
despesas_mutaveis = [0] * 30 
    # Aporte aposentadoria
aportes_aposentadoria = [0] * 30
    # Aporte investimento
aportes_investimentos = [0] * 30

### Menu de escolha inicial

while True:
    print ("O que você deseja fazer?!")
    print ("---" * 25) 
    print (" 1 - Adicionar Balanço")
    print (" 2 - Alterar Balanço")
    print (" 3 - Exibir Balanço Diário")   
    print (" 4 - Exibir Balanço Semanal")
    print (" 5 - Exibir Balanço Mensal")
    print (" 6 - Encerrar")
    print ("---" * 25) 
    escolha_01 = str(input("Digite o nome ou número corresponde a opção:"))

    if escolha_01 == "1" or escolha_01 == "Adicionar Balanço":
            
        ### Entradas

            while True:
                print ("Deseja realizar a entrada de dados no gerenciador de finanças? ")
                escolha_02 = str(input("[S/N]"))
                if escolha_02 == "N":
                    break
                elif escolha_02 == "S":
                    
                    print ("---" * 25)
                    dia = int(input("Digite o dia do mês (1 até 30): "))
                    print ("---" * 25)

                    if dia >= 1 and dia <= 30:
                        dia_local = dia - 1
                        print ("Adicionar ganhos as finanças. Digite 0 para finalizar!")

                        while True:
                            ganho = int(input("Digite o valor do ganho/s : R$ "))
                            if ganho == 0:
                                break                  
                            ganhos_fixos[dia_local] += ganho
                           

                        while True:
                            despesa = int(input("Digite o valor da despesa/s: R$ "))
                            if despesa == 0:
                                break
                            despesas_fixas[dia_local] += despesa

                        aportes_aposentadoria[dia] = int(input("Digite o valor do aporte em aposentadoria: R$ "))
                        aportes_investimentos[dia] = int(input("Digite o valor do aporte em investimento: R$ "))
                        while True:
                            print ("Deseja exibir o Balanço Diário?")
                            escolha_03 = str(input("[S/N]"))
                            if escolha_03 == "N":
                                break
                            elif escolha_03 == "S":
                                print (f"O saldo diário é R$: {(ganhos_fixos[dia_local] - despesas_fixas[dia_local])}, foi realizado aporte em aposentadoria no valor de: R$ {aportes_aposentadoria[dia]}, aporte em investimento no valor de: R$ {aportes_investimentos[dia]}")
                            else:
                                print ("Opção Inválida")
                    else:
                        print ("Opção Inválida")
                else:
                    print ("Opção Inválida")

    elif escolha_01 == "2" or escolha_01 == "Alterar Balanço":
        print ("1")
    elif escolha_01 == "3" or escolha_01 == "Exibir Balanço Diário":
        print ("2")
    elif escolha_01 == "4" or escolha_01 == "Exibir Balanço Semanal":
        print ("3")
    elif escolha_01 == "5" or escolha_01 == "Exibir Balançi Mensal":
        print ("4")
    elif escolha_01 == "6" or escolha_01 == "Encerrar":
        print ("Encerrando o programa!")
        break
    else:
        print ("Opção Inválida")
    ### Estatísticas
    # Balanço financeiro semanal
    # Balanço financeiro mensal
