mes_dias = [31,28,31,30,31,30,31,31,30,31,30,31]
    # Ganhos fixos
ganhos_fixos = [[0] * i for i in mes_dias]
    # Ganhos mutáveis
ganhos_mutaveis = [[0] * i for i in mes_dias]
    # Despesas fixas
despesas_fixas = [[0] * i for i in mes_dias]
    # Despesas mutáveis
despesas_mutaveis = [[0] * i for i in mes_dias] 
    # Aporte aposentadoria
aportes_aposentadoria = [[0] * i for i in mes_dias]
    # Aporte investimento
aportes_investimentos = [[0] * i for i in mes_dias]

### Menu de escolha inicial

while True:
    print ("O que você deseja fazer?!")
    print ("---" * 25) 
    print (" 1 - Adicionar Balanço")
    print (" 2 - Alterar Balanço")
    print (" 3 - Exibir Balanço Diário")   
    print (" 4 - Exibir Balanço Semanal")
    print (" 5 - Exibir Balanço Mensal")
    print (" 6 - Encerrar")
    print ("---" * 25) 
    escolha_01 = str(input("Digite o nome ou número corresponde a opção:"))

    if escolha_01 == "1" or escolha_01 == "Adicionar Balanço":
            
        ### Entradas

            while True:
                print ("Deseja realizar a entrada de dados no gerenciador de finanças? ")
                escolha_02 = str(input("[S/N]"))
                if escolha_02 == "N":
                    break
                elif escolha_02 == "S":
                    
                    print ("---" * 25)
                    mes = int(input("Digite o mês (1 até 12): ")) - 1
                    print ("---" * 25)
                    dia = int(input("Digite o dia (1 até 30): ")) - 1
                    
                    if dia >= 0 and dia <= 30 and mes >= 0 and mes <= 12:
                        print ("Adicionar ganhos as finanças. Digite 0 para finalizar!")

                        while True:
                            ganho = int(input("Digite o valor do ganho/s : R$ "))
                            if ganho == 0:
                                break                  
                            ganhos_fixos[mes][dia] += ganho
                           

                        while True:
                            despesa = int(input("Digite o valor da despesa/s: R$ "))
                            if despesa == 0:
                                break
                            despesas_fixas[mes][dia] += despesa

                    
                        aposentadoria = int(input("Digite o valor do aporte em aposentadoria: R$ "))
                        aportes_aposentadoria[mes][dia] += aposentadoria

                        investimento = int(input("Digite o valor do aporte em investimento: R$ "))
                        aportes_investimentos[mes][dia] += investimento

    
                        while True:
                            print ("Deseja exibir o Balanço Diário?")
                            escolha_03 = str(input("[S/N]"))
                            if escolha_03 == "N":
                                break
                            elif escolha_03 == "S":
                                print (f"O saldo diário é R$: {(ganhos_fixos[mes][dia] - despesas_fixas[mes][dia])}, foi realizado aporte em aposentadoria no valor de: R$ {aportes_aposentadoria[mes][dia]}, aporte em investimento no valor de: R$ {aportes_investimentos[mes][dia]}")
                            else:
                                print ("Opção Inválida")
                    else:
                        print ("Opção Inválida")
                else:
                    print ("Opção Inválida")

    elif escolha_01 == "2" or escolha_01 == "Alterar Balanço":
        print ("---" * 25)
        dia = int(input("Digite o dia do mês que deseja alterar (1 até 30): "))
        print ("---" * 25)

        dia_local = dia - 1 

        novo_ganho = int(input("Digite o novo valor do ganho/s : R$ "))
        ganhos_fixos[dia_local] = novo_ganho
                           
        nova_despesa = int(input("Digite o novo valor da despesa/s: R$ "))
        despesas_fixas[dia_local] = nova_despesa

                    
        nova_aposentadoria = int(input("Digite o novo valor do aporte em aposentadoria: R$ "))
        aportes_aposentadoria[dia_local] = nova_aposentadoria

        novo_investimento = int(input("Digite o novo valor do aporte em investimento: R$ "))
        aportes_investimentos[dia_local] = novo_investimento
        print (f"Os valores do dia {dia} foram alterados com sucesso!")


    elif escolha_01 == "3" or escolha_01 == "Exibir Balanço Diário":
        print ("Deseja exibir o Balanço Diário?")
        escolha_04 = str(input("[S/N]"))
        if escolha_04 == "N":
            break
        elif escolha_04 == "S":
            dia = int(input("Digite o dia do mês (1 até 30): "))
            if dia >= 1 and dia <= 30:
                dia_local = dia - 1
                print (f"O saldo do dia {dia} é R$: {(ganhos_fixos[dia_local] - despesas_fixas[dia_local])}, foi realizado aporte em aposentadoria no valor de: R$ {aportes_aposentadoria[dia_local]}, aporte em investimento no valor de: R$ {aportes_investimentos[dia_local]}")
        else:
                 print ("Opção Inválida")

    elif escolha_01 == "4" or escolha_01 == "Exibir Balanço Semanal":
        print ("3")
    elif escolha_01 == "5" or escolha_01 == "Exibir Balançi Mensal":
        print ("4")
    elif escolha_01 == "6" or escolha_01 == "Encerrar":
        print ("Encerrando o programa!")
        break
    else:
        print ("Opção Inválida")
    ### Estatísticas
    # Balanço financeiro semanal
    # Balanço financeiro mensal
